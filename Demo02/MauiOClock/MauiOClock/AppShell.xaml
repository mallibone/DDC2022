<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiOClock.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:MauiOClock.Pages"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Simple">
            <ShellContent 
                ContentTemplate="{DataTemplate pages:MainPage}"
                Route="SimplePage" />
        </Tab>
        <Tab Title="FunkyFont">
            <ShellContent 
                ContentTemplate="{DataTemplate pages:FunkyFontPage}"
                Route="SimplePage" />
        </Tab>
        <Tab Title="Analog">
            <ShellContent 
                ContentTemplate="{DataTemplate pages:AnalogClockPage}"
                Route="SimplePage" />
        </Tab>
    </TabBar>

</Shell>
